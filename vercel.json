{
  "buildCommand": "npm run build && cp -r public/* dist/",
  "outputDirectory": "dist",
  "framework": "vite",
  "rewrites": [
    {
      "source": "/letterform",
      "destination": "/letterform/index.html"
    },
    {
      "source": "/letterform/",
      "destination": "/letterform/index.html"
    },
    {
      "source": "/checkout",
      "destination": "/checkout/index.html"
    },
    {
      "source": "/checkout/",
      "destination": "/checkout/index.html"
    },
    {
      "source": "/upsell",
      "destination": "/upsell/index.html"
    },
    {
      "source": "/upsell/",
      "destination": "/upsell/index.html"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}
